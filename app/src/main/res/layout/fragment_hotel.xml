<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".Hotel">


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view6" />

        <View
            android:id="@+id/text_box"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/text_box2"
            app:layout_constraintEnd_toEndOf="@id/view7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/view7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="Тур"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/text_box"
            app:layout_constraintTop_toTopOf="@+id/text_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="186 600 ₽"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_box"
            app:layout_constraintTop_toTopOf="@+id/text_box" />

        <View
            android:id="@+id/text_box2"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/text_box3"
            app:layout_constraintEnd_toEndOf="@id/view7"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/text_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="Топливный сбор"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/text_box2"
            app:layout_constraintTop_toTopOf="@+id/text_box2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="9 300 ₽"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_box2"
            app:layout_constraintTop_toTopOf="@+id/text_box2" />

        <View
            android:id="@+id/text_box3"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/text_box4"
            app:layout_constraintEnd_toEndOf="@id/view7"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/text_box2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="Сервисный сбор"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/text_box3"
            app:layout_constraintTop_toTopOf="@+id/text_box3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="2 136 ₽"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_box3"
            app:layout_constraintTop_toTopOf="@+id/text_box3" />

        <View
            android:id="@+id/text_box4"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/view7"
            app:layout_constraintEnd_toEndOf="@id/view7"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/text_box3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="К оплате"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/text_box4"
            app:layout_constraintTop_toTopOf="@+id/text_box4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sf_pro_5"
            android:text="198 036 ₽"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_box4"
            app:layout_constraintTop_toTopOf="@+id/text_box4" />


        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_rad_15_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/sf_pro_5"
            android:lineHeight="17.6dp"
            android:text="Оплатить 198 036 ₽"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <View
            android:id="@+id/view9"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/lina"
            app:layout_constraintTop_toTopOf="@id/view8"
            tools:layout_editor_absoluteX="0dp" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintTop_toTopOf="@+id/view8"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <View
            android:id="@+id/view"
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/line"
            app:layout_constraintBottom_toBottomOf="@id/view8"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>